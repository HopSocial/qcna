<div class="jumbotron">
        <h2>Contact Information</h2>
        <div class="item">
          <p>Name of primary contact</p>
          <input type="text" name="message[NameOfPrimaryContact]"/>
        </div>
        <div class="item">
          <p>Title of primary contact</p>
          <input type="text" name="message[TitleOfPrimaryContact]"/>
        </div>
        <div class="item">
          <p>Contact</p>
          <div class="name-item">
            <input type="text" name="message[Phone]" placeholder="Phone"/>
            <input type="text" name="message[Fax]" placeholder="Fax"/>
          </div>
        </div>
        <div class="item">
          <p>E-mail</p>
          <input id="from-email" type="email" name="fromEmail" value="{{ message.fromEmail ?? '' }}"/>
           {{ message is defined and message ? errorList(message.getErrors('fromEmail')) }}
        </div>
        <div class="question">
          <p>Preffered mode of communication:</p>
          <div class="question-answer checkbox-item">
            <div>
              <input type="checkbox" value="email" id="email" name="message[PrefferedModeOfCommunication][]" value="Email"/>
              <label for="email" class="check"><span>E-Mail</span></label>
            <input type="checkbox" value="email" id="phone" name="message[PrefferedModeOfCommunication][]" value="Phone"/>
              <label for="phone" class="check"><span>Phone</span></label>
            </div>
          </div>
        </div>
</div>
<div class="jumbotron">
        <h2>Project Reporting</h2>

         <h3>A. News Articles</h3>
        <div class="item">
          <p>Number and titles of regular news articles</p>
          <textarea style="width:100%" name="message[NewsArticles]" placeholder="Please provide the number and titles of regular news articles produced during the month for the LJI program."/></textarea>
        </div>
        <div class="item">
          <p>Number and titles for in-depth news articles</p>
          <textarea style="width:100%" name="message[IndepthArticles]" placeholder="Please provide the number and titles of in-depth news articles produced during the month for the LJI program."/></textarea>
        </div>
        <h3>B. Demographics</h3>
        <div class="item">
